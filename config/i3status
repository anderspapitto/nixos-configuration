general {
        output_format = i3bar
        colors = true
        interval = 3
}

order += "volume pulse"
order += "disk /"
order += "disk /nix/store"
order += "disk /home"
order += "wireless wlan0"
order += "path_exists VPN"
order += "battery 0"
order += "tztime local"

volume pulse {
        format = "♪: %volume"
        format_muted = "♪: muted (%volume)"
        device = "pulse"
}

wireless wlp4s0 {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

path_exists VPN {
        path = "/proc/sys/net/ipv4/conf/tun0"
}

disk "/" {
        format = "/ %avail"
}

disk "/nix/store" {
        format = "/nix/store %avail"
}

disk "/home" {
        format = "/home %avail"
}

battery 0 {
        format = "%status %percentage %remaining"
        last_full_capacity = true
        integer_battery_capacity = true
        low_threshold = 15
        threshold_type = percentage
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
